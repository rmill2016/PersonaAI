{
  "name": "leadpersona",
  "description": "LeadPersona | Your AI Leader For Business Outreach",
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "*://linkedin.com/*",
        "*://leadpersona.io/*"
      ],
      "run_at": "document_end",
      "js": ["./index.global.js"],
      "css": ["./style.css"]
    }
  ],
  "permissions": ["storage", "tabs", "activeTab"],
  "background": {
    "service_worker": "./background.global.js"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "120": "Logo.png"
  }
}
